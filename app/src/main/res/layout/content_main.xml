<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/palm"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Harga TBS (Rp) 1.230/ kg"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />



    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center">


            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="14dp"
                    android:clickable="true"
                    android:id="@+id/btnPetani"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardElevation="4dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:orientation="vertical"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/ic_farmer"

                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Petani"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="14dp"
                    android:clickable="true"
                    android:id="@+id/btnPKS"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardElevation="4dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:orientation="vertical"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/ic_launcher_background"

                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PKS"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center">

            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="14dp"
                    android:clickable="true"
                    android:id="@+id/btnKoperasi"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardElevation="4dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:orientation="vertical"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/ic_collaboration"

                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Koperasi"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="14dp"
                    android:clickable="true"
                    android:id="@+id/btnPedagang"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardElevation="4dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:orientation="vertical"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/ic_clerk"

                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pedagang"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>